.container
  .bs-docs-section
    .row
      .col-lg-12
        .page-header
          %h3 Información de la categoría

  .col-lg-6
    .well
      .bs-component
        .panel.panel-primary
          .panel-heading
            = t('categories.data')
          %p
            %b= t('categories.name')+': '
            = @category.name

  .col-lg-6
    .well
      .bs-component
        %p
          =link_to 'Modificar datos', edit_category_path(@category), :class=>'btn btn-primary'
        %p
          =link_to 'Ver Tipos de productos asociados', product_types_path(:category_id => @category.id), :class=>'btn btn-success'

  .col-lg-12
    = link_to 'Volver a la lista de categorías', categories_path, :class=>'btn btn-danger'