.container
  .col-lg-12
    .page-header
      %h1 Toxo Piel: Productos
    .bs-component
      .well
        %p
          = link_to 'Crear un producto', new_product_path(:mark_id=>@mark_id), :class=>'btn btn-primary'

        %table.table.table-striped.table-hover
          %tr.info
            %th.th
              Nombre
            %th.th
              Descripción
            %th.th
              Marca
            %th.th
              Acciones
          -@products.each do |product|
            %tr.warning
              %td.td
                = image_tag product.image.url(:thumb)
                = product.name
              %td.td
                = product.description
              %td.td
                -if !product.mark.nil?
                  -product.mark.each do |mpt|
                    = mpt.name.concat(' - ')

              %td.td
                = link_to (image_tag 'lapiz.jpg', :size=>'20x20'), product_path(product,:mark_id=>@mark_id)
                = link_to (image_tag 'delete.jpg', :size=>'20x20'), product, method: :delete, data: { confirm: '¿Está seguro de borrar el producto?' }

        - if @products.empty?
          .alert.alert-dismissable.alert-danger
            %p No se han encontrado productos

        = link_to 'Volver al índice', administracion_path, :class=>'btn btn-danger'