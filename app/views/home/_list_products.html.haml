.panel
  -if !@mark.nil?
    =image_tag @mark.image.url(:original), :alt=>@mark.name, :title=>@mark.name
    %br
    %br

  -find_categories(@mark, @category, @product_type).each do |cat|
    .btn-xs.panel_products_custom
      = link_to cat.name, productos_path(:mark_id=>get_mark_id(@mark), :category_id=>cat.id, :anchor=>cat.name+get_mark_name(@mark)), :class =>' btn btn-info'
      .panel
        -find_product_types(@mark,cat, @product_type).each do |pt|
          = link_to pt.name, productos_path(:mark_id=>get_mark_id(@mark), :product_type_id=>pt.id, :category_id=>cat.id, :anchor=>pt.name+'_'+cat.name+get_mark_name(@mark)), :class=>'btn btn-link'
    %br