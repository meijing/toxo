.container
  .page-header
    %h1 Toxo Piel

    
  = render 'menu'

  .row
    .col-lg-2
      .well
        -marcas_posicion_par.each do |mark|
          = link_to productos_path(:mark_id => mark.id) do
            =image_tag mark.image.url(:original)
            %br
            %br
        
    .col-lg-8
      .well
        .flexslider
          %ul.slides
            %li
              =image_tag 'area.png'
            %li
              =image_tag 'foto_antigua.jpg'


    .col-lg-2
      .well
        -marcas_posicion_impar.each do |mark|
          = link_to productos_path(:mark_id => mark.id) do
            =image_tag mark.image.url(:original)
            %br
            %br

  = render 'pe'