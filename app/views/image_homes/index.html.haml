.container
  .col-sm-12
    .page-header
      %h1 Toxo Piel: Imágenes de las fachadas
    .bs-component
      .well
        %p
          .col-sm-10
            = link_to 'Crear tienda', new_image_home_path, :class=>'btn btn-primary'
          .col-sm-2
            = link_to 'Volver al índice', administracion_path, :class=>'btn btn-danger'
        %p
        %table.table.table-striped.table-hover
          %tr.info
            %th.th
              Tienda
          -@image_homes.each do |image|
            %tr.warning
              %td.td
                = link_to image.name, edit_image_home_path(image)



